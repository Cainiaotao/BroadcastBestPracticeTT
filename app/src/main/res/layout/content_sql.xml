<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tantao.broadcastbestpractice.SqlActivity"
    tools:showIn="@layout/activity_sql">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create SQLDataBase"
        android:id="@+id/createsqlBtn"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createsqlBtn"
        android:stretchColumns="1"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="书名:"/>
            <EditText
                android:id="@+id/bookname"
                android:layout_height="wrap_content"
                android:hint="input"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="作者:"/>
            <EditText
                android:id="@+id/bookauthor"
                android:layout_height="wrap_content"
                android:hint="input"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="价格:"/>
            <EditText
                android:id="@+id/bookprice"
                android:layout_height="wrap_content"
                android:hint="input"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="页数:"/>
            <EditText
                android:id="@+id/bookpage"
                android:layout_height="wrap_content"
                android:hint="input"/>
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:id="@+id/addBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:id="@+id/updateBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find"
            android:id="@+id/findBtn"/>
    </LinearLayout>




</RelativeLayout>
